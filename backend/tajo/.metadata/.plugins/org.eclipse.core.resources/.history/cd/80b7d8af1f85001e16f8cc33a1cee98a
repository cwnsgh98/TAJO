<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.tajo.dao.GroupDao">

	<!-- 전체글 조회 -->
	<select id="selectAll" resultType="Group"
		parameterType="String">
		SELECT *
		FROM groupBoard
	</select>

	<!-- 상세글 조회 -->
	<select id="selectOne" resultType="Group" parameterType="int">
		SELECT *
		FROM groupBoard
		WHERE id = #{id};
	</select>

	<!-- 게시글 등록 -->
	<insert id="insertGroup" parameterType="Group" useGeneratedKeys="true">
		INSERT INTO groupBoard ()
		VALUES ()
	</insert>

	<!-- 게시글 삭제 -->
	<delete id="deleteGroup" parameterType="int">
		DELETE FROM group
		WHERE groupid = #{groupid}
	</delete>

	<!-- 게시글 수정 -->
	<!-- 컬럼이 등록 날짜만 관리를 하고 있다. -->
	<!-- 등록날짜 / 최근 조회날짜 / 수정 날짜 .... -->
	<update id="updateGroup" parameterType="Group">
		UPDATE group
		SET title =
		#{title}, content = #{content}, regeDate = now()
		WHERE id = #{id}
	</update>



</mapper>