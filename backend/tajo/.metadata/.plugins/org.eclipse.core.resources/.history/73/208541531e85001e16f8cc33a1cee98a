<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafit.model.dao.ReviewDao">
	<resultMap type="Review" id="ReviewMap">
		<result column="id" property="id"/>
		<result column="writerId" property="writerId"/>
		<result column="title" property="title"/>
		<result column="content" property="content"/>
		<result column="videoUrl" property="videoUrl"/>
		<result column="regeDate" property="regDate"/>
	</resultMap>

	<!-- 전체글 조회 -->
	<select id="selectAll" resultType="Review" parameterType="String">
		SELECT id, content, writerId, title, videoUrl, date_format(regeDate, '%Y-%m-%d') as regDate 
		FROM review
		WHERE videoUrl = #{videoUrl};
	</select>

	<!-- 상세글 조회 -->
	<select id="selectOne" resultMap="ReviewMap" parameterType="int">
		SELECT *
		FROM review
		WHERE id = #{id};
	</select>

	<!-- 게시글 등록(서8 박정훈) -->
	<insert id="insertReview" parameterType="Review" keyProperty="id" useGeneratedKeys="true">
		INSERT INTO review (title, writerId, content, videoUrl)
		VALUES (#{title}, #{writerId}, #{content}, #{videoUrl})
	</insert>
	
	<!-- 게시글 삭제 -->
	<delete id="deleteReview" parameterType="int">
		DELETE FROM review
		WHERE id = #{id}
	</delete>
		
	<!-- 게시글 수정 -->
	<!-- 컬럼이 등록 날짜만 관리를 하고 있다. -->
	<!-- 등록날짜 / 최근 조회날짜 / 수정 날짜 .... -->
	<update id="updateReview" parameterType="Review">
		UPDATE review
		SET title = #{title}, content = #{content}, regeDate = now()
		WHERE id = #{id}
	</update>
		


</mapper>